%%% 章番号の表記 %%%
\renewcommand{\thesection}{第 \arabic{section} 章}
\renewcommand{\thesubsection}{\arabic{section}.\arabic{subsection}}

%%% セクション（章・項・節）のフォント %%%
\makeatletter
\renewcommand{\section}{\@startsection{section}{1}{\z@}%
  {1.5\Cvs \@plus.5\Cvs \@minus.2\Cvs}%
  {.5\Cvs \@plus.3\Cvs}%
  {\normalfont\LARGE\bfseries}} %\Large -> \LARGE
\renewcommand{\subsection}{\@startsection{subsection}{2}{\z@}%
  {1.5\Cvs \@plus.5\Cvs \@minus.2\Cvs}%
  {.5\Cvs \@plus.3\Cvs}%
  {\normalfont\Large\bfseries}} %\large -> \Large
\renewcommand{\subsubsection}{\@startsection{subsubsection}{3}{\z@}%
  {1.5\Cvs \@plus.5\Cvs \@minus.2\Cvs}%
  {.5\Cvs \@plus.3\Cvs}%
  {\normalfont\large\bfseries}} %\normalsize -> \large
\makeatother

%%% 式番号に章番号も含めるように設定 %%%
\makeatletter
\def\theequation{\arabic{section}.\arabic{equation}}
\@addtoreset{equation}{section}
\makeatother

%%% タイトル（表紙） %%%
\usepackage{xcolor}

% 指定されていない属性などを強調するためのコマンド
\newcommand{\emphasize}[1]{\textbf{\textcolor{red}{#1}}}

\makeatletter
\newcommand{\graduationYear}{\gdef\@graduationYear}
\newcommand{\studentId}{\gdef\@studentId}
\newcommand{\thesistype}{\gdef\@thesistype}

\title{\emphasize{[タイトルを指定してください]}}
\author{\emphasize{[著者を指定してください]}}
\graduationYear{\emphasize{[卒業年度を指定してください]}}
\studentId{\emphasize{[学修番号を指定してください]}}
\thesistype{0}

\newcommand{\thesistypetext}{
  \ifcase\@thesistype
    \emphasize{[論文タイプを指定してください]}  % 0 の場合
  \or
    卒業論文                    % 1 の場合
  \or
    修士論文                    % 2 の場合
  \else
    \emphasize{[論文タイプが無効です]}        % それ以外の値の場合
  \fi
}

